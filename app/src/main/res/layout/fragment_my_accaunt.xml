<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myAccaunt">

    <LinearLayout
        android:padding="8dp"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_corners_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <LinearLayout
                android:layout_weight="1"
                android:padding="12dp"
                android:orientation="vertical"
                android:background="@color/macYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/TB1"
                    android:layout_marginTop="3dp"
                    android:text="Имя :"
                    android:gravity="start"
                    android:textSize="22dp"
                    android:textColor="@color/macRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <TextView
                    android:id="@+id/TB2"
                    android:layout_marginTop="24dp"
                    android:text="Почта :"
                    android:gravity="start"
                    android:textSize="22dp"
                    android:textColor="@color/macRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <TextView
                    android:id="@+id/TB3"
                    android:layout_marginTop="24dp"
                    android:text="Телефон :"
                    android:gravity="start"
                    android:textSize="22dp"
                    android:textColor="@color/macRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />





            </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.8"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:background="@color/macYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">




                    <TextView
                        android:id="@+id/accName"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/rounded_corners"

                        android:gravity="start"
                        android:textSize="22dp"
                        android:textColor="@color/macYellow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/accMail"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_corners"

                        android:gravity="start"
                        android:textSize="22dp"
                        android:textColor="@color/macYellow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:id="@+id/accPhone"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_corners"

                        android:gravity="start"
                        android:textSize="22dp"
                        android:textColor="@color/macYellow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />





                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/exitButton"
                android:textSize="26dp"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                android:textColor="@color/macYellow"
                android:text="Выйти"
                android:background="@drawable/rounded_corners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
