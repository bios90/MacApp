<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="8dp"
    android:background="@drawable/rounded_corners"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_corners_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tbAdress"
            android:layout_marginTop="12dp"
            android:text="Введите Адресс доставки"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/macRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etAdress"
            style="@style/RedEdit"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonAdress"
            android:textSize="26dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textColor="@color/macYellow"
            android:text="Заказать!"
            android:background="@drawable/rounded_corners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>