<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/basketImage"
            android:src="@drawable/bigmac"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.4" />

        <TextView
            android:id="@+id/basketName"
            android:text="Биг Мак"
            android:textColor="@color/darkGray"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />
        <TextView
            android:id="@+id/basketPrice"
            android:text="120\n руб."
            android:textColor="@color/darkGray"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageMinus"
                android:background="@android:color/transparent"
                android:tint="@color/macRed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_remove_black_24dp" />

            <TextView
                android:id="@+id/basketCount"
                android:textColor="@color/macRed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="24dp" />

            <ImageButton
                android:id="@+id/imagePlus"
                android:background="@android:color/transparent"
                android:tint="@color/macRed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_add_16" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>