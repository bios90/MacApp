<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="8dp"
    android:background="@drawable/rounded_corners"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="8dp"
        android:background="@drawable/rounded_corners_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:background="@color/macYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <TextView
                android:id="@+id/logTB"
                android:layout_marginTop="12dp"
                android:text="Почта"
                android:gravity="center"
                android:textSize="26dp"
                android:textColor="@color/macRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/loginMail"
                android:hint="Введите вашу почту"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/macRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/passTB"
                android:layout_marginTop="20dp"
                android:text="Пароль"
                android:gravity="center"
                android:textSize="26dp"
                android:textColor="@color/macRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/loginPass"
                android:inputType="textPassword"
                android:hint="Введите пароль"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/macRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyEditTextTheme"
                />

            <Button
                android:id="@+id/loginButton"
                android:textSize="26dp"
                android:textAllCaps="false"
                android:layout_margin="8dp"
                android:textColor="@color/macYellow"
                android:text="Войти"
                android:background="@drawable/rounded_corners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notReg"
            android:layout_marginTop="14dp"
            android:text="Еще не зарегистрированны? Нажмите сюда, что бы пройти регистрацию."
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/macRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>