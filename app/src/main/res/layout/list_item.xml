<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/macYellow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:background="@android:color/white"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_gravity="center"
                android:src="@drawable/bigmac"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="120dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textName"
                    android:textColor="@color/macRed"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:text="Биг Мак"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textDescShort"
                    android:textColor="@color/darkGray"
                    android:textSize="14dp"
                    android:layout_margin="4dp"
                    android:text="Большой сандвич с двумя рублеными бифштексами из натуральной говядины на специальной булочке."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textPrice"
                    android:text="130 руб"
                    android:textColor="@color/darkGray"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/cardAddButton"
                    android:scaleX="-1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shopping_cart_black_24dp"
                    android:tint="@color/macRed"
                    android:background="@android:color/white"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>